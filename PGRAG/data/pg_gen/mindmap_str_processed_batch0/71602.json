{
    "主题": "广州推出科研用物资跨境便利化措施",
    "元信息":{
        "关键词": "广州 科研用物资 跨境 港科大 便利化"
    },
    "详情": {
        "广州科研用物资跨境便利化措施": {
            "广州实验室和香港科技大学（广州）为试点": {
                "广州市科技局会同广州海关、广州市商务局、广州市市场监管局和广州市卫生健康委联合印发了广州市第一批科研用物资跨境正面清单": {},
                "广州是科技部“推动开展科研用物资跨境自由流动改革试点工作”的6个试点城市之一": {}
            },
            "措施具体内容": {
                "建立快速通关机制，为试点单位纳入“正面清单”的物资开通“绿色通道”，可优先办理检疫审批、单证审核、检查等业务，可直接向海关申报通关，无需办理《药品进口通关单》": {},
                "加快处理《最终用户和最终用途说明》的出具": {},
                "享受免于提供国外官方检疫证书等系列检疫监管便利化措施": {},
                "对入境高风险特殊物品开展风险评估，符合要求的允许快速通关，同时加强后续监管": {},
                "全面推广应用低温探测、智能审图、集中审像等非侵入式查验技术，支持取得审批批文的生物样品等物品通过非贸渠道快速通关": {}
            },
            "试点效果": {
                "动物细胞、血液及其制品等审批时间缩短至1-3天，进境检验检疫时间由3天缩短至1天": {},
                "实现动物细胞等物品边隔离边实验": {},
                "减免税审核周期从平均5天缩短至1个工作日": {},
                "两个试点单位实际享惠进口货值超过3亿元，实际减免税额超过3000万元": {}
            },
            "市科技局与广州海关合作解决减免税手续较长的问题": {
                "建立重点辅导机制，指导试点单位运用便利措施，如“两步申报”、“提前申报”等": {
                    "通过无纸申请方式上传委托书扫描件，或在首次办理有纸申请时提交委托书原件备查，委托书期限可由试点单位自行确定": {}
                }
            },
            "市科技局牵头建立协同推进工作机制，解决试点单位遇到的问题": {},
            "香港科技大学（广州）在科研物资跨境流动方面得到充分指导和协调解决，可以积极开展科技创新合作和人才联合培养工作": {
                "实现香港科技大学和香港科技大学（广州）在穗港两地中协同发展": {}
            }
        }
    }
}